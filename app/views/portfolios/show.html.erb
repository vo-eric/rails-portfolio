<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-12">
      <% if logged_in?(:site_admin) %>
        <span>
          <%= link_to "Edit Item", 
            edit_portfolio_path(@portfolio_item), 
            class: "btn btn-warning" 
          %>
        </span>
      <% end %>
      <%= link_to "View Portfolio", portfolios_path %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_image(@portfolio_item.main_image, "main") %>
    </div>

    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>

      <hr>

      <em><%= @portfolio_item.subtitle %></em>
      <p><%= @portfolio_item.body %></p>
      
      <hr>
      
      <h3>Technologies Used:</h3>
      <% @portfolio_item.technologies.each do |t| %>
        <p> <%= t.name %></p>
      <% end%>
    </div>
  </div>
</div>

